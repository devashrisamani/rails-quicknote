<turbo-frame id="<%= dom_id(note) %>">
  <div class="p-4 bg-white shadow-sm rounded border border-gray-200">

    <h2 class="text-lg font-semibold mb-1"><%= note.title %></h2>
    <p class="text-gray-700 mb-4"><%= note.body %></p>

    <div class="flex gap-4 text-sm">
      <%= link_to "Edit",
          edit_note_path(note),
          data: { turbo_frame: dom_id(note) },
          class: "text-blue-600 hover:underline" %>

      <%= link_to "Delete",
          note,
          method: :delete,
          class: "text-red-600 hover:underline",
          data: { turbo_confirm: "Are you sure?" } %>
    </div>

  </div>
</turbo-frame>