<turbo-frame id="<%= dom_id(note) %>">
  <div class="p-4 bg-white shadow-sm rounded mb-4">
    <h2 class="text-lg font-semibold"><%= note.title %></h2>
    <p class="text-gray-600"><%= note.body %></p>

    <div class="mt-3 flex gap-4 text-sm">
      <%= link_to "Edit",
          edit_note_path(note),
          data: { turbo_frame: dom_id(note) },
          class: "text-blue-600" %>

      <%= link_to "Delete",
          note,
          method: :delete,
          data: { turbo_confirm: "Are you sure?" },
          class: "text-red-600" %>
    </div>
  </div>
</turbo-frame>