<div class="max-w-2xl mx-auto py-10">

  <% if notice %>
    <p class="mb-4 text-green-600 font-medium"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Notes</h1>
    <%= link_to "New Note",
        new_note_path,
        class: "bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded-md" %>
  </div>

  <div class="space-y-6">
    <% @notes.each do |note| %>
      <%= render note %>
    <% end %>
  </div>

</div>