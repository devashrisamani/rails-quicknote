<%# =========================================================================== %>
<%# INDEX VIEW - app/views/notes/index.html.erb %>
<%# =========================================================================== %>
<%# This displays the list of all notes %>
<%# URL: /notes %>
<%# Controller action: NotesController#index %>
<%# %>
<%# Available variables from controller: %>
<%#   @notes - Array of all Note objects from the database %>
<%# =========================================================================== %>

<%# SET PAGE TITLE - This goes into the <title> tag in the layout %>
<%# The layout has: <%= content_for(:title) || "QuickNote" %> %>
<%# So this sets the browser tab title to "Notes" %>
<% content_for :title, "Notes" %>

<%# MAIN CONTAINER %>
<%# Tailwind classes: %>
<%#   max-w-3xl - Maximum width of 768px (keeps content readable) %>
<%#   mx-auto   - Margin left/right auto (centers the container) %>
<%#   px-4      - Padding left/right 16px %>
<%#   sm:px-6   - On small screens and up: padding 24px %>
<%#   py-8      - Padding top/bottom 32px %>
<%#   sm:py-12  - On small screens and up: padding 48px %>
<div class="max-w-3xl mx-auto px-4 sm:px-6 py-8 sm:py-12">

  <%# FLASH MESSAGE - Shows success/error messages %>
  <%# 'notice' is set by the controller: redirect_to @note, notice: "..." %>
  <%# notice.present? checks if there's a message to show %>
  <% if notice.present? %>
    <div class="mb-6 px-4 py-3 rounded-xl bg-emerald-50 border border-emerald-200 text-emerald-700 flex items-center gap-3">
      <%# Checkmark icon (SVG) %>
      <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor" class="flex-shrink-0">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
      <%# Display the message %>
      <span class="font-medium"><%= notice %></span>
    </div>
  <% end %>

  <%# PAGE HEADER %>
  <header class="mb-10">
    <%# Flexbox layout: stacks on mobile, side-by-side on larger screens %>
    <%# flex-col       - Stack items vertically %>
    <%# sm:flex-row    - On small+ screens: arrange horizontally %>
    <%# sm:items-center - Vertically center items %>
    <%# sm:justify-between - Push items to opposite ends %>
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div>
        <%# APP TITLE with gradient text %>
        <%# bg-gradient-to-r creates a left-to-right gradient %>
        <%# bg-clip-text + text-transparent makes gradient show through text %>
        <h1 class="text-4xl font-bold bg-gradient-to-r from-amber-600 via-orange-500 to-rose-500 bg-clip-text text-transparent">
          QuickNote
        </h1>
        <%# NOTE COUNT %>
        <%# pluralize() adds "s" when count != 1 %>
        <%# pluralize(1, "note") → "1 note" %>
        <%# pluralize(5, "note") → "5 notes" %>
        <p class="text-slate-500 mt-1">
          <%= pluralize(@notes.count, "note") %> saved
        </p>
      </div>

      <%# NEW NOTE BUTTON %>
      <%# link_to creates an <a> tag %>
      <%# First argument: where to link (new_note_path = /notes/new) %>
      <%# class: CSS classes for styling %>
      <%# do...end block: content inside the link %>
      <%= link_to new_note_path,
          class: "inline-flex items-center justify-center gap-2 bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 text-white px-5 py-3 rounded-xl font-semibold shadow-lg shadow-orange-500/25 transition-all duration-200 hover:shadow-xl hover:shadow-orange-500/30 hover:-translate-y-0.5" do %>
        <%# Plus icon %>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        New Note
      <% end %>
    </div>
  </header>

  <%# NOTES LIST OR EMPTY STATE %>
  <%# @notes.any? returns true if there's at least one note %>
  <% if @notes.any? %>
    <%# NOTES CONTAINER %>
    <%# id="notes" is needed for Turbo Streams to find this element %>
    <%# space-y-6 adds 24px vertical gap between children %>
    <div id="notes" class="space-y-6">
      <%# RENDER ALL NOTES %>
      <%# This is Rails magic! It's equivalent to: %>
      <%#   @notes.each do |note| %>
      <%#     render partial: "note", locals: { note: note } %>
      <%#   end %>
      <%# %>
      <%# For each note, it renders _note.html.erb partial %>
      <%# The note variable is automatically available in the partial %>
      <%= render @notes %>
    </div>
  <% else %>
    <%# EMPTY STATE - Shown when there are no notes %>
    <div class="text-center py-20 px-4">
      <%# Decorative icon container %>
      <div class="w-20 h-20 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-amber-100 to-orange-100 flex items-center justify-center">
        <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="text-amber-500">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-slate-800 mb-2">No notes yet</h3>
      <p class="text-slate-500 mb-8 max-w-sm mx-auto">Start capturing your thoughts and ideas. Create your first note to get started.</p>
      <%# Button to create first note %>
      <%= link_to new_note_path,
          class: "inline-flex items-center gap-2 bg-gradient-to-r from-amber-500 to-orange-500 hover:from-amber-600 hover:to-orange-600 text-white px-6 py-3 rounded-xl font-semibold shadow-lg shadow-orange-500/25 transition-all duration-200" do %>
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        Create your first note
      <% end %>
    </div>
  <% end %>
</div>
